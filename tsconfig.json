{
	"compilerOptions": {
		"target": "es2018",
		"module": "es2015",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"lib": [
			"es2015",
		],
		"types": [
			"react",
			"react-native",
		],
		"jsx": "react",
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"outDir": "./lib",
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/__tests__/*"]
}
