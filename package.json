{
	"name": "@mloureiro/react-native-expandable-text",
	"description": "React Native Text component that collapses and expands based on the number of lines",
	"version": "0.1.1",
	"license": "ISC",
	"author": {
		"name": "Marcos Loureiro",
		"email": "mloureiro.dev@gmail.com"
	},
	"keywords": [
		"react-native",
		"text",
		"expandable",
		"collapsable",
		"read",
		"view",
		"more"
	],
	"main": "dist/index.js",
	"files": [
		"dist/**/*"
	],
	"scripts": {
		"build": "tsc",
		"format": "prettier --write \"src/**/*.ts\" \"src/**/*.tsx\"",
		"format:validate": "prettier -l \"src/**/*.ts\" \"src/**/*.tsx\"",
		"lint": "tslint -p tsconfig.json",
		"test": "jest --config jest.config.json",
		"test:coverage": "yarn test --coverage --coverageReporters=text-lcov | coveralls"
	},
	"devDependencies": {
		"@types/enzyme": "^3.1.15",
		"@types/enzyme-adapter-react-16": "^1.0.3",
		"@types/jest": "^23.3.12",
		"@types/jsdom": "^12.2.1",
		"@types/react": "^16.7.18",
		"@types/react-native": "^0.57.27",
		"coveralls": "^3.0.2",
		"enzyme": "^3.8.0",
		"enzyme-adapter-react-16": "^1.7.1",
		"husky": "^1.3.1",
		"jest": "^23.6.0",
		"jest-fetch-mock": "^2.1.0",
		"jsdom": "^13.1.0",
		"lint-staged": "^8.1.0",
		"prettier": "^1.15.3",
		"react": "^16.7.0",
		"react-dom": "^16.7.0",
		"react-native": "^0.57.8",
		"react-native-mock-render": "^0.1.2",
		"ts-jest": "^23.10.5",
		"tslint": "^5.12.1",
		"tslint-config-prettier": "^1.17.0",
		"typescript": "^3.2.2"
	},
	"peerDependencies": {
		"react": "^16",
		"react-native": "^0.57"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"prettier --write",
			"git add"
		]
	}
}
