{
	"name": "@mloureiro/react-native-expandable-text",
	"description": "React Native Text component that collapses and expands based on the number of lines",
	"version": "0.1.0",
	"license": "MIT",
	"author": {
		"name": "Marcos Loureiro",
		"email": "mloureiro.dev@gmail.com"
	},
	"keywords": [
		"react-native",
		"text",
		"expandable",
		"collapsable",
		"read",
		"view",
		"more"
	],
	"main": "dist/index.js",
	"files": [
		"dist/**/*"
	],
	"scripts": {
		"build": "tsc",
		"format": "prettier --write \"src/**/*.ts\" \"src/**/*.tsx\"",
		"lint": "tslint -p tsconfig.json"
	},
	"devDependencies": {
		"@types/react": "^16.7.18",
		"@types/react-native": "^0.57.27",
		"husky": "^1.3.1",
		"lint-staged": "^8.1.0",
		"prettier": "^1.15.3",
		"react": "^16.7.0",
		"react-native": "^0.57.8",
		"tslint": "^5.12.1",
		"tslint-config-prettier": "^1.17.0",
		"typescript": "^3.2.2"
	},
	"peerDependencies": {
		"react-native": "*"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"prettier --write",
			"git add"
		]
	}
}
